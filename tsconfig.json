{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],

    "module": "esnext",
    "removeComments": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "importHelpers": true,

    "baseUrl": "./",
    "outDir": "./lib",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": []
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
